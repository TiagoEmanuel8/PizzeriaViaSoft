generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  items        OrderItem[]
  amount       Float
  time         Float
  name         String
  address      String
  district     String
  city         String
  cep          String
  observation  String
  mobileNumber String
}

model OrderItem {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId        String   @db.ObjectId
  order          Order    @relation(fields: [orderId], references: [id])
  size           String
  flavor         String
  customizations String[]
  quantity       Int      @default(1)
}
