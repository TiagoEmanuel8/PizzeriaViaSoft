generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id           Int         @id @default(autoincrement())
  items        OrderItem[]
  amount       Float
  time         Float
  name         String
  address      String
  district     String
  city         String
  cep          String
  observation  String?
  mobileNumber String
}

model OrderItem {
  id             Int      @id @default(autoincrement())
  orderId        Int
  order          Order    @relation(fields: [orderId], references: [id])
  size           String
  flavor         String
  customizations String[]
  quantity       Int      @default(1)
}
